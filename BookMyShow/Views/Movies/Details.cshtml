@model BookMyShow.Models.Movie
@{
    ViewBag.Title = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.GenreType</li>
    <li>Release Date: @Model.ReleeaseDate.ToLongDateString()</li>
    <li>Date Added: @Model.DateAdded.ToLongDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
<div>
    @Html.ActionLink("Back to Movies","Index", null, new { @class="btn btn-primary"})
</div>
